<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/MyAppbar"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:fitsSystemWindows="true"
        app:elevation="0dp">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapse_toolbar"
            android:layout_width="match_parent"
            android:layout_height="215dip"
            android:background="#fff"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            android:fitsSystemWindows="true"
            app:contentScrim="?attr/colorPrimary"
            app:expandedTitleGravity="center_horizontal">

            <ImageView
                android:id="@+id/img_foto_masjid"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:background="@drawable/load"
                android:fitsSystemWindows="true"
                app:layout_collapseMode="parallax" />

            <android.support.v7.widget.Toolbar
                android:id="@+id/MyToolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"
                app:contentInsetStartWithNavigation="0dp"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>

    <TextView
        android:id="@+id/txt_jenis_kajian"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:textColor="#fff"
        android:textStyle="bold"
        android:textSize="18sp"
        android:background="@color/colorPrimary"
        app:layout_anchor="@id/MyAppbar"
        app:layout_anchorGravity="center|bottom"
        android:text="Harian Terbuka untuk umum"/>

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/nested"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="fill_vertical"
        android:layout_marginTop="28dp"
        app:behavior_overlapTop="25dp"
        android:scrollbars="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_margin="8dp"
                app:cardElevation="8dp"
                app:contentPadding="16dp"
                card_view:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="2">

                        <TextView
                            android:id="@+id/txt_id"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Id : 1"
                            android:gravity="center_vertical"
                            android:fontFamily="sans-serif-condensed"
                            android:textColor="#433f3f"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:drawableLeft="@drawable/ic_tgldetail"
                            android:drawablePadding="4dp"
                            android:paddingLeft="4dp"
                            android:paddingBottom="2dp"/>

                        <TextView
                            android:id="@+id/txt_tanggal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="19 February 2017"
                            android:gravity="center_vertical"
                            android:fontFamily="sans-serif-condensed"
                            android:textColor="#433f3f"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:drawableLeft="@drawable/ic_tgldetail"
                            android:drawablePadding="4dp"
                            android:paddingLeft="4dp"
                            android:paddingBottom="2dp"/>

                        <TextView
                            android:id="@+id/txt_pemateri"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Pemateri : ust Fahmi A."
                            android:drawableLeft="@drawable/ic_pemateri"
                            android:drawablePadding="4dp"
                            android:gravity="center_vertical"
                            android:fontFamily="sans-serif-condensed"
                            android:textColor="#433f3f"
                            android:paddingBottom="4dp"
                            android:paddingLeft="4dp"
                            android:textSize="16sp"/>

                        <TextView
                            android:id="@+id/txt_tema"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Tema : Minhajul Muslim"
                            android:drawableLeft="@drawable/ic_tema"
                            android:drawablePadding="4dp"
                            android:gravity="center_vertical"
                            android:textColor="#433f3f"
                            android:fontFamily="sans-serif-condensed"
                            android:paddingBottom="4dp"
                            android:paddingLeft="4dp"
                            android:textSize="16sp"/>

                        <TextView
                            android:id="@+id/txt_setiap_hari"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Setiap hari : "
                            android:gravity="center_vertical"
                            android:fontFamily="sans-serif-condensed"
                            android:textColor="#433f3f"
                            android:textSize="16sp"
                            android:drawableLeft="@drawable/ic_today"
                            android:drawablePadding="4dp"
                            android:paddingLeft="4dp"
                            android:paddingBottom="2dp"/>

                        <TextView
                            android:id="@+id/txt_pekan"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Pekan ke : "
                            android:gravity="center_vertical"
                            android:fontFamily="sans-serif-condensed"
                            android:textColor="#433f3f"
                            android:textSize="16sp"
                            android:drawableLeft="@drawable/ic_pekan"
                            android:drawablePadding="4dp"
                            android:paddingLeft="4dp"
                            android:paddingBottom="2dp"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingBottom="2dp">
                            <TextView
                                android:id="@+id/txt_mulai"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="9:30"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:gravity="center_vertical"
                                android:fontFamily="sans-serif-condensed"
                                android:textColor="#433f3f"
                                android:drawableLeft="@drawable/ic_timedetail"
                                android:drawablePadding="4dp"
                                android:paddingLeft="4dp"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="-"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:gravity="center_vertical"
                                android:fontFamily="sans-serif-condensed"
                                android:textColor="#433f3f"
                                android:paddingLeft="4dp"/>
                            <TextView
                                android:id="@+id/txt_sampai"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="selesai"
                                android:textStyle="bold"
                                android:textSize="16sp"
                                android:gravity="center_vertical"
                                android:fontFamily="sans-serif-condensed"
                                android:textColor="#433f3f"
                                android:paddingLeft="4dp"/>

                        </LinearLayout>

                        <TextView
                            android:id="@+id/txt_lokasi"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Lokasi : Muadz bin Jabal"
                            android:drawableLeft="@drawable/ic_location"
                            android:drawablePadding="4dp"
                            android:gravity="center_vertical"
                            android:fontFamily="sans-serif-condensed"
                            android:textColor="#433f3f"
                            android:paddingBottom="4dp"
                            android:paddingLeft="4dp"
                            android:textSize="16sp"/>

                        <TextView
                            android:id="@+id/txt_alamat"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Alamat : Muadz bin Jabal"
                            android:drawableLeft="@drawable/ic_location"
                            android:drawablePadding="4dp"
                            android:gravity="center_vertical"
                            android:fontFamily="sans-serif-condensed"
                            android:textColor="#433f3f"
                            android:paddingBottom="4dp"
                            android:paddingLeft="4dp"
                            android:textSize="16sp"/>

                        <TextView
                            android:id="@+id/txt_cp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="CP : 082100012345"
                            android:drawableLeft="@drawable/ic_cp"
                            android:drawablePadding="4dp"
                            android:gravity="center_vertical"
                            android:fontFamily="sans-serif-condensed"
                            android:textColor="#433f3f"
                            android:paddingBottom="4dp"
                            android:paddingLeft="4dp"
                            android:textSize="16sp"/>
                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="370dp"
                    android:background="@color/white">

                    <TextView
                        android:id="@+id/txt_map_kajian"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:textColor="#fff"
                        android:padding="8dp"
                        android:textStyle="bold"
                        android:text="Map Kajian"
                        android:background="@color/colorPrimary"/>

                    <TextView
                        android:id="@+id/lihat"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_below="@id/txt_map_kajian"
                        android:textColor="#999e9b"
                        android:padding="8dp"
                        android:text="Lihat lokasi di google map"
                        android:background="#fff"/>

                    <fragment
                        xmlns:tools="http://schemas.android.com/tools"
                        android:id="@+id/map_frag"
                        android:layout_below="@id/lihat"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="4dp"
                        android:name="com.google.android.gms.maps.SupportMapFragment"
                        tools:context="jadwalkajianpekalongan.MapsActivity" />
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="#faf4f4">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="110dp"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>



    </android.support.v4.widget.NestedScrollView>


</android.support.design.widget.CoordinatorLayout>
